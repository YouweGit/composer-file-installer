{
  "name": "mediact/composer-file-installer",
  "description": "Install files with Composer.",
  "type": "library",
  "license": "MIT",
  "prefer-stable": true,
  "minimum-stability": "stable",
  "authors": [
    {
      "name": "MediaCT B.V.",
      "email": "contact@mediact.nl"
    },
    {
      "name": "Jan-Marten de Boer",
      "role": "developer"
    }
  ],
  "require": {
    "php": "^7.0",
    "composer-plugin-api": "^2.0",
    "mediact/file-mapping": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "@stable",
    "kint-php/kint": "@stable",
    "mediact/testing-suite": "dev-feature/support-composer-v2",
    "composer/composer": "@stable",
    "mikey179/vfsstream": "@stable"
  },
  "autoload": {
    "psr-4": {
      "Mediact\\Composer\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mediact\\Composer\\Tests\\": "tests"
    }
  },
  "archive": {
    "exclude": [
      "tests",
      "phpcs.xml",
      "phpmd.xml",
      "phpunit.xml",
      "bitbucket-pipelines.yml",
      ".gitignore"
    ]
  }
}
